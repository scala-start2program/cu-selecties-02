        <Label x:Name="lblValueTop" Background="LightGray" Content="" HorizontalAlignment="Left" Height="30" Margin="536,18,0,0" VerticalAlignment="Top" Width="55"/>
        <Label x:Name="lblValueBottom" Background="LightGray" Content="" HorizontalAlignment="Left" Height="29" Margin="536,75,0,0" VerticalAlignment="Top" Width="55"/>
        <Label x:Name="lblReport" Content="" HorizontalAlignment="Left" Height="38" Margin="137,137,0,0" VerticalAlignment="Top" Width="401"/>

    </Grid>
</Window>
